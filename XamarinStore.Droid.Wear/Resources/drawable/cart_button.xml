<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <size
                        android:width="@dimen/close_button_diameter"
                        android:height="@dimen/close_button_diameter" />
                    <solid android:color="@color/dismiss_close_pressed" />
                </shape>
            </item>
            <item>
                <bitmap android:src="@drawable/ic_full_remove_cart" android:gravity="center" />
            </item>
        </layer-list>
    </item>
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <size
                        android:width="@dimen/close_button_diameter"
                        android:height="@dimen/close_button_diameter" />
                    <solid android:color="@color/dismiss_close" />
                </shape>
            </item>
            <item>
                <bitmap android:src="@drawable/ic_full_remove_cart" android:gravity="center" />
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <size
                        android:width="@dimen/close_button_diameter"
                        android:height="@dimen/close_button_diameter" />
                    <solid android:color="@color/dark_blue" />
                </shape>
            </item>
            <item>
                <bitmap android:src="@drawable/ic_full_add_cart" android:gravity="center" />
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <size
                        android:width="@dimen/close_button_diameter"
                        android:height="@dimen/close_button_diameter" />
                    <solid android:color="@color/blue" />
                </shape>
            </item>
            <item>
                <bitmap android:src="@drawable/ic_full_add_cart" android:gravity="center" />
            </item>
        </layer-list>
    </item>
</selector>